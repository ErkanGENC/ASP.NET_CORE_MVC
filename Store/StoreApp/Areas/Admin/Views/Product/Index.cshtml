@{
    ViewData["Title"] = "Product";
}
@model List<Product>

<div class="text-center">
    <h6 class="display-6">
        Product List
    </h6>
</div>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-outline-success" asp-area="Admin" asp-controller="Product" asp-action="Create">
        <i class="fa fa-plus"></i>
        Add New Product
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (Product prd in Model)
                {
                    <tr>
                        <td>@prd.Id</td>
                        <td>@prd.Name</td>
                        <td>@prd.Price.ToString("c")</td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-warning" asp-area="Admin" asp-controller="Product" asp-action="Update" asp-route-id="@prd.Id">
                                    <i class="fa fa-edit"></i>
                                    Update
                                </a>
                                <a class="btn btn-danger" asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@prd.Id">
                                    <i class="fa fa-trash"></i>
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">
                        No products available yet.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
