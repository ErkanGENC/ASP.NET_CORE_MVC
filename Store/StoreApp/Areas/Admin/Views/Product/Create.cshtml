@model Product

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fa fa-plus-circle"></i>
                        Add New Product
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-area="Admin" 
                          asp-controller="Product" 
                          asp-action="Create" 
                          method="post"
                          class="needs-validation">

                        <div class="form-floating mb-3">
                            <input asp-for="Name" 
                                   class="form-control" 
                                   placeholder="Product Name"
                                   required />
                            <label asp-for="Name">Product Name</label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                            <div class="invalid-feedback">
                                Please enter a product name.
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Price" 
                                   class="form-control" 
                                   type="number" 
                                   step="0.01"
                                   min="0"
                                   placeholder="Price"
                                   required />
                            <label asp-for="Price">Price (â‚º)</label>
                            <span asp-validation-for="Price" class="text-danger"></span>
                            <div class="invalid-feedback">
                                Please enter a valid price.
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <textarea asp-for="Description" 
                                      class="form-control" 
                                      style="height: 100px"
                                      placeholder="Description"></textarea>
                            <label asp-for="Description">Description</label>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label">Product Image</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fa fa-image"></i>
                                </span>
                                <input asp-for="ImageUrl" 
                                       class="form-control" 
                                       placeholder="Enter URL" />
                            </div>
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            <div class="form-text">
                                Default image will be used if no image URL is provided.
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-area="Admin" 
                               asp-controller="Product" 
                               asp-action="Index" 
                               class="btn btn-secondary me-md-2">
                                <i class="fa fa-arrow-left"></i>
                                Back to List
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fa fa-save"></i>
                                Save Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        // Bootstrap validation for form
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()

        // Custom validation for Turkish decimal format
        $.validator.methods.range = function (value, element, param) {
            var globalizedValue = value.replace(",", ".");
            return this.optional(element) || (globalizedValue >= param[0] && globalizedValue <= param[1]);
        }

        $.validator.methods.number = function (value, element) {
            return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:[\s\.,]\d{3})+)(?:[\.,]\d+)?$/.test(value);
        }
    </script>
}
