@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-4">
                            <div class="card bg-info text-white">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-box me-2"></i>Ürün Yönetimi
                                    </h5>
                                    <p class="card-text">Ürünleri ekle, düzenle ve yönet</p>
                                    <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-light">
                                        Ürünlere Git
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-tags me-2"></i>Kategori Yönetimi
                                    </h5>
                                    <p class="card-text">Kategorileri ekle, düzenle ve yönet</p>
                                    <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-light">
                                        Kategorilere Git
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="card bg-warning text-dark">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <i class="fas fa-shopping-cart me-2"></i>Sipariş Yönetimi
                                    </h5>
                                    <p class="card-text">Siparişleri görüntüle ve yönet</p>
                                    <a asp-area="Admin" asp-controller="Order" asp-action="Index" class="btn btn-light">
                                        Siparişlere Git
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>