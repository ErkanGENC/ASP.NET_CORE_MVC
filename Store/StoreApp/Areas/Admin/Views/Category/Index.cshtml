@{
    ViewData["Title"] = "Category";
}
@model List<Category>

<div class="text-center">
    <h6 class="display-6">
        Categories
    </h6>
</div>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-outline-success" asp-area="Admin" asp-controller="Category" asp-action="Create">
        <i class="fa fa-plus"></i>
        New Category Add
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.CategoryId</td>
                        <td>@category.CategoryName</td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-warning" asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-id="@category.CategoryId">
                                    <i class="fa fa-edit"></i>
                                    Update
                                </a>
                                <a class="btn btn-danger" asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@category.CategoryId">
                                    <i class="fa fa-trash"></i>
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">
                        Henüz kategori bulunmamaktadır.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
