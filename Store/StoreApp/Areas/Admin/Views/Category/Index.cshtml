@model IEnumerable<CategoryDto>
@{
    ViewData["Title"] = "Kategoriler";
}

<div class="text-center">
    <h6 class="display-6">
        Kategori Listesi
    </h6>
</div>

<div class="d-flex justify-content-end mb-3">
    <a class="btn btn-outline-success" asp-area="Admin" asp-controller="Category" asp-action="Create">
        <i class="fa fa-plus"></i>
        Yeni Kategori Ekle
    </a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Kategori Adı</th>
                <th>Ürün Sayısı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @if (Model?.Any() == true)
            {
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.CategoryId</td>
                        <td>@category.CategoryName</td>
                        <td>
                            <span class="badge bg-info">@category.ProductCount</span>
                        </td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-warning" asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-id="@category.CategoryId">
                                    <i class="fa fa-edit"></i>
                                    Güncelle
                                </a>
                                <a class="btn btn-danger" asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@category.CategoryId"
                                   onclick="return confirm('Bu kategoriyi silmek istediğinizden emin misiniz? Bu işlem geri alınamaz ve kategoriye bağlı ürünler etkilenebilir.')">
                                    <i class="fa fa-trash"></i>
                                    Sil
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center">
                        Henüz kategori bulunmamaktadır.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
