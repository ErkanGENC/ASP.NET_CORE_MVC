@{
    ViewData["Title"] = "Reports";
}

<div class="text-center mb-4">
    <h6 class="display-6">System Reports</h6>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">Product Statistics</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span>Total Products:</span>
                    <span class="badge bg-primary">@ViewBag.TotalProducts</span>
                </div>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span>Average Product Price:</span>
                    <span class="badge bg-info">@ViewBag.AveragePrice?.ToString("c")</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span>Stock Value:</span>
                    <span class="badge bg-success">@ViewBag.TotalValue?.ToString("c")</span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="card-title mb-0">Category Statistics</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span>Total Categories:</span>
                    <span class="badge bg-success">@ViewBag.TotalCategories</span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span>Average Products per Category:</span>
                    <span class="badge bg-warning">@ViewBag.ProductsPerCategory</span>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="card-title mb-0">System Summary</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Metric</th>
                                <th>Value</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>System Status</td>
                                <td>Active</td>
                                <td><span class="badge bg-success">Running</span></td>
                            </tr>
                            <tr>
                                <td>Last Update</td>
                                <td>@DateTime.Now.ToString("dd/MM/yyyy HH:mm")</td>
                                <td><span class="badge bg-info">Up to date</span></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
