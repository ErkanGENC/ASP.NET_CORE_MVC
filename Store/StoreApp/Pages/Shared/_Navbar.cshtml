@{
    string currentUrl = ViewContext.HttpContext.Request.Path;
}

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container">
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary navbar-brand">
            <i class="fa fa-store"></i> StoreApp
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Index"
                        class="btn btn-secondary @(currentUrl == "/Home/Index" ? "active" : "")">
                        <i class="fa fa-home"></i> Home
                    </a>
                </li>
                <li class="nav-item ms-2">
                    <a asp-controller="Product" asp-action="Index"
                        class="btn btn-danger @(currentUrl.StartsWith("/Product") ? "active" : "")">
                        <i class="fa fa-shopping-cart"></i> Products(@await Component.InvokeAsync("ProductSummary"))
                    </a>
                </li>
                <li class="nav-item ms-2">
                    <a asp-controller="Category" asp-action="Index"
                        class="btn btn-info @(currentUrl.StartsWith("/Category") ? "active" : "")">
                        <i class="fa fa-list"></i> Categories
                    </a>
                </li>
                <li class="nav-item ms-2">
                    <a asp-controller="Admin" asp-action="Index"
                        class="btn btn-info @(currentUrl.StartsWith("/Admin") ? "active" : "")">
                        <i class="fa fa-amazon"></i> Admin
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>