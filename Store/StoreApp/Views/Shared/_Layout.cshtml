<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Store App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
    <style>
        .navbar {
            background-color: #2c3e50 !important;
            box-shadow: 0 2px 4px rgba(0, 0, 0, .1);
        }

        .navbar-brand,
        .nav-link {
            color: #ecf0f1 !important;
        }

        .nav-link:hover {
            color: #3498db !important;
        }

        .nav-link.active {
            color: #3498db !important;
            font-weight: bold;
        }

        .dropdown-menu {
            border: none;
            box-shadow: 0 0 10px rgba(0, 0, 0, .1);
        }

        .notification-badge {
            position: absolute;
            top: 0;
            right: -5px;
            padding: 3px 6px;
            border-radius: 50%;
            background: #e74c3c;
            color: white;
            font-size: 0.7rem;
        }

        .page-header {
            background: #f8f9fa;
            padding: 1rem 0;
            margin-bottom: 2rem;
            border-bottom: 1px solid #e9ecef;
        }

        .page-title {
            color: #2c3e50;
            font-weight: bold;
        }

        .footer {
            background-color: #2c3e50;
            color: #ecf0f1 !important;
            padding: 1rem 0;
            margin-top: 3rem;
        }

        .footer a {
            color: #3498db;
        }

        .card {
            border: none;
            box-shadow: 0 0 10px rgba(0, 0, 0, .1);
            transition: transform 0.3s;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .btn-primary {
            background-color: #3498db;
            border-color: #3498db;
        }

        .btn-primary:hover {
            background-color: #2980b9;
            border-color: #2980b9;
        }

        .latest-products {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 5px;
        }

        .latest-products h5 {
            color: #2c3e50;
            margin-bottom: 15px;
        }

        .latest-products .list-group-item {
            transition: all 0.2s;
        }

        .latest-products .list-group-item:hover {
            background-color: #e9ecef;
            transform: translateX(5px);
        }

        .latest-products li a {
            display: block;
            padding: 5px 0;
            transition: all 0.2s;
        }

        .latest-products li a:hover {
            transform: translateX(5px);
            color: #3498db !important;
        }
    </style>
</head>

<body>
    <header>
        @await Html.PartialAsync("_Navbar")
    </header>

    @if (ViewData["Title"] != null)
    {
        <div class="page-header">
            <div class="container">
                <h1 class="page-title">@ViewData["Title"]</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                        <li class="breadcrumb-item active">@ViewData["Title"]</li>
                    </ol>
                </nav>
            </div>
        </div>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-center">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>Hakkımızda</h5>
                    <p>En kaliteli ürünleri en uygun fiyatlarla sunuyoruz.</p>
                </div>
                <div class="col-md-4">
                    <h5>Hızlı Linkler</h5>
                    <ul class="list-unstyled">
                        <li><a href="/">Anasayfa</a></li>
                        <li><a href="/Product">Ürünler</a></li>
                        <li><a href="/Cart">Sepetim</a></li>
                        <li><a href="/Contact">İletişim</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>İletişim</h5>
                    <p>
                        <i class="fas fa-envelope me-2"></i> gencerkan149@gmail.com<br>
                        <i class="fas fa-phone me-2"></i> +90 552 804 29 24
                    </p>
                </div>
            </div>
            <hr class="bg-light">
            <p class="mb-0">
                &copy; @DateTime.Now.Year - Store App - Made with <i class="fas fa-heart text-danger"></i>
            </p>
        </div>
        <div class="text-center">
            <div class="div class btn group btn-group-sm">
                <a asp-protocol="https" asp-host="github.com/ErkanGENC" class="btn btn-primary text-white"><i
                        class="fab fa-github"></i> GitHub</a>
                <a asp-protocol="https" asp-host="www.facebook.com/erkan.genc.1044"
                    class="btn btn-primary text-white"><i class="fab fa-facebook"></i> Facebook</a>
                <a asp-protocol="https" asp-host="app.gitbook.com/o/FDce1KSc7L84JNcyFedw/s/4NpnekGMdDgkDBYOQrcF/"
                    class="btn btn-primary text-white"><i class="fab fa-book"></i> Gitbook</a>
                <a asp-protocol="https" asp-host="www.linkedin.com/in/erkan-gen%C3%A7-2711a4222/"
                    class="btn btn-primary text-white"><i class="fab fa-linkedin"></i> Linkedin</a>
            </div>

        </div>
    </footer>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>