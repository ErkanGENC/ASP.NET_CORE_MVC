@model Entities.Models.Product


<div class="container mt-5">
    <div class="row">
        <!-- Ürün Resmi -->
        <div class="col-md-4">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded shadow" style="max-width: 100%; height: auto;">
        </div>
        
        <!-- Ürün Detayları -->
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">@Model.Name</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h5 class="text-muted">Fiyat</h5>
                        <p class="h4 text-primary">@Model.Price.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</p>
                    </div>
                    <div class="mb-3">
                        <h5 class="text-muted">Açıklama</h5>
                        <p class="lead">@Model.Description</p>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary">Ürünlere Dön</a>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Ana Sayfa</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>  











