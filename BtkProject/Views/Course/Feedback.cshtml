@model BtkProject.Models.Candidate
@{
    ViewData["Title"] = "Feedback";
}

<h1>Feedback</h1>

<div class="alert alert-success">
    <h4>Congratulations @Model.firstName</h4>
</div>

<div class="card mt-3">
    <div class="card-header">
        <h5 class="card-title">Başvuru Detayları</h5>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-4">
                <strong>Ad:</strong>
            </div>
            <div class="col-8">
                @Model.firstName
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-4">
                <strong>Soyad:</strong>
            </div>
            <div class="col-8">
                @Model.lastName
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-4">
                <strong>Email:</strong>
            </div>
            <div class="col-8">
                @Model.email
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-4">
                <strong>Yaş:</strong>
            </div>
            <div class="col-8">
                @Model.age
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-4">
                <strong>Seçilen Kurs:</strong>
            </div>
            <div class="col-8">
                @Model.selectedCourse
            </div>
        </div>
    </div>
</div>

<div class="mt-3 d-flex justify-content-between">
    <a class="btn btn-primary" href="/course/Index">Kayıtları Görüntüle</a>
    <a class="btn btn-danger" href="/course/apply">AnaSayfa</a>
</div>
